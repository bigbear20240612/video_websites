# 应用配置
NEXT_PUBLIC_APP_NAME="DAXIONG 视频平台"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API 配置
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# JWT 密钥（生产环境请使用更安全的密钥）
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# 数据库配置（如果使用真实数据库）
# DATABASE_URL="mongodb://localhost:27017/daxiong-video"
# DATABASE_URL="postgresql://username:password@localhost:5432/daxiong-video"

# 文件上传配置
UPLOAD_MAX_SIZE="100MB"
ALLOWED_VIDEO_FORMATS="mp4,avi,mov,wmv,flv,webm"
ALLOWED_IMAGE_FORMATS="jpg,jpeg,png,gif,webp"

# 第三方服务配置
# CLOUDINARY_CLOUD_NAME="your-cloudinary-name"
# CLOUDINARY_API_KEY="your-cloudinary-key"
